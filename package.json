  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "axios": "^0.21.1",
    "msw": "^0.35.0",
    "next": "^11.1.2",
    "next-page-tester": "^0.30.0",
    "postcss": "^8.4.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "setimmediate": "^1.0.5",
    "swr": "^1.2.1",
    "tailwindcss": "^3.0.22",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@types/react": "^17.0.39",
    "babel-jest": "^27.5.1",
    "eslint": "8.9.0",
    "eslint-config-next": "12.0.10",
    "jest": "^27.5.1",
    "jest-css-modules": "^2.1.0",
    "typescript": "^4.5.5"
